@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<div class="text-center">
<h1>Sneuss Factory Engineers</h1>

@if(Model.Count == 0)
{
  <h3>There are currently no Engineers on record.</h3>
  <p>Want to add an Engineer? Click on the <span class="emphasize">Add New Engineer</span> link at the top of the page.</p>
}
else
{
  <p>Click on the Engineer's name to view their details.</p>
  @foreach(Engineer engineer in Model)
  {
    <li class="engineer-list">@Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId})</li>
  }
}

</div>