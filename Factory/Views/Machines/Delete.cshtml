@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<div class="warning">
  <h1>Delete this Machines's record?</h1>
  <p class="warning-text">This action will permanently delete this machine and its details from your records.</p>
  <h2>@Html.DisplayFor(model => model.Type)</h2>
</div>


<div class="delete-form">
  @using (Html.BeginForm())
  {
    <button type="submit", class="btn btn-danger">Delete</button>
  }
</div>
<div class="cancel-delete">
  <button class="btn btn-warning">@Html.ActionLink("Cancel", "Index")</button>
</div>